<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme Colors -->

    <!-- Window backgrounds (softer dark, not pure black) -->
    <SolidColorBrush x:Key="WindowBackground" Color="#2D2D30"/>
    <SolidColorBrush x:Key="WindowForeground" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#9E9E9E"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="BorderBrushLight" Color="#4A4A50"/>

    <!-- Context/Secondary backgrounds -->
    <SolidColorBrush x:Key="ContextBackground" Color="#3E3E42"/>
    <SolidColorBrush x:Key="HoverBackground" Color="#3E3E42"/>

    <!-- Status colors (slightly brighter for dark bg contrast) -->
    <SolidColorBrush x:Key="SuccessColor" Color="#66BB6A"/>
    <SolidColorBrush x:Key="SuccessBackground" Color="#B266BB6A"/>
    <SolidColorBrush x:Key="ErrorColor" Color="#EF5350"/>
    <SolidColorBrush x:Key="ErrorBackground" Color="#B2EF5350"/>
    <SolidColorBrush x:Key="ErrorHighlight" Color="#4A2020"/>
    <SolidColorBrush x:Key="InfoColor" Color="#42A5F5"/>

    <!-- Control colors -->
    <SolidColorBrush x:Key="ControlBackground" Color="#3E3E42"/>
    <SolidColorBrush x:Key="ControlForeground" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ControlBorder" Color="#555555"/>

    <!-- TextBox Style -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="#3E3E42"/>
        <Setter Property="Foreground" Value="#E0E0E0"/>
        <Setter Property="BorderBrush" Value="#555555"/>
        <Setter Property="CaretBrush" Value="#E0E0E0"/>
        <Setter Property="SelectionBrush" Value="#264F78"/>
    </Style>

    <!-- ComboBox Style -->
    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="#3E3E42"/>
        <Setter Property="Foreground" Value="#E0E0E0"/>
        <Setter Property="BorderBrush" Value="#555555"/>
    </Style>

    <!-- Button Style -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="#3E3E42"/>
        <Setter Property="Foreground" Value="#E0E0E0"/>
        <Setter Property="BorderBrush" Value="#555555"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <!-- CheckBox Style -->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="#E0E0E0"/>
    </Style>

    <!-- TextBlock Style -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="#E0E0E0"/>
    </Style>

    <!-- Expander Style -->
    <Style TargetType="Expander">
        <Setter Property="Foreground" Value="#E0E0E0"/>
        <Setter Property="BorderBrush" Value="#3F3F46"/>
    </Style>

    <!-- Slider Style -->
    <Style TargetType="Slider">
        <Setter Property="Foreground" Value="#E0E0E0"/>
    </Style>

    <!-- ScrollViewer Style -->
    <Style TargetType="ScrollViewer">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

</ResourceDictionary>
