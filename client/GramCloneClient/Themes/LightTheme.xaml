<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme Colors -->

    <!-- Window backgrounds -->
    <SolidColorBrush x:Key="WindowBackground" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="WindowForeground" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#666666"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="BorderBrushLight" Color="#DDDDDD"/>

    <!-- Context/Secondary backgrounds -->
    <SolidColorBrush x:Key="ContextBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="HoverBackground" Color="#E6F5FF"/>

    <!-- Status colors -->
    <SolidColorBrush x:Key="SuccessColor" Color="#4CAF50"/>
    <SolidColorBrush x:Key="SuccessBackground" Color="#B24CAF50"/>
    <SolidColorBrush x:Key="ErrorColor" Color="#F44336"/>
    <SolidColorBrush x:Key="ErrorBackground" Color="#B2F44336"/>
    <SolidColorBrush x:Key="ErrorHighlight" Color="#FFC8C8"/>
    <SolidColorBrush x:Key="InfoColor" Color="#2196F3"/>

    <!-- Control colors -->
    <SolidColorBrush x:Key="ControlBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ControlForeground" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="ControlBorder" Color="#AAAAAA"/>

    <!-- TextBox Style -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="Foreground" Value="#1E1E1E"/>
        <Setter Property="BorderBrush" Value="#AAAAAA"/>
        <Setter Property="CaretBrush" Value="#1E1E1E"/>
        <Setter Property="SelectionBrush" Value="#3399FF"/>
    </Style>

    <!-- ComboBox Style -->
    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="Foreground" Value="#1E1E1E"/>
        <Setter Property="BorderBrush" Value="#AAAAAA"/>
    </Style>

    <!-- Button Style -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="#E0E0E0"/>
        <Setter Property="Foreground" Value="#1E1E1E"/>
        <Setter Property="BorderBrush" Value="#AAAAAA"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <!-- CheckBox Style -->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="#1E1E1E"/>
    </Style>

    <!-- TextBlock Style -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="#1E1E1E"/>
    </Style>

    <!-- Expander Style -->
    <Style TargetType="Expander">
        <Setter Property="Foreground" Value="#1E1E1E"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
    </Style>

    <!-- Slider Style -->
    <Style TargetType="Slider">
        <Setter Property="Foreground" Value="#1E1E1E"/>
    </Style>

    <!-- ScrollViewer Style -->
    <Style TargetType="ScrollViewer">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

</ResourceDictionary>
