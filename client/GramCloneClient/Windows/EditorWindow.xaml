<Window x:Class="GramCloneClient.Windows.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gram Clone Editor"
        Height="450"
        Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" VerticalAlignment="Center">
            <StackPanel Margin="0,0,12,0">
                <TextBlock Text="Mode" FontWeight="Bold"/>
                <ComboBox x:Name="ModeCombo" Width="160" SelectionChanged="ModeCombo_OnSelectionChanged"/>
            </StackPanel>
            <StackPanel x:Name="TonePanel" Margin="0,0,12,0">
                <TextBlock Text="Tone" FontWeight="Bold"/>
                <ComboBox x:Name="ToneCombo" Width="160"/>
            </StackPanel>
            <TextBlock x:Name="StatusText" VerticalAlignment="Bottom" Margin="12,0,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock Text="Original" FontWeight="Bold"/>
                <TextBox x:Name="OriginalTextBox" AcceptsReturn="True" Height="280" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
            <StackPanel Grid.Column="2">
                <TextBlock Text="Improved" FontWeight="Bold"/>
                <TextBox x:Name="ImprovedTextBox" AcceptsReturn="True" Height="280" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="RunButton" Content="Run" Width="80" Margin="0,0,8,0" Click="RunButton_OnClick"/>
            <Button x:Name="ApplyButton" Content="Apply" Width="80" Margin="0,0,8,0" Click="ApplyButton_OnClick"/>
            <Button Content="Cancel" Width="80" Click="CancelButton_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
